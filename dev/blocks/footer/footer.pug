mixin footer(modificator, extraClasses)
	- classList = 'footer'

	if modificator
		each mod in modificator
			- classList = classList + ' footer--' + mod

	if extraClasses
		- classList = classList + ' ' + extraClasses

	div(class=classList style="border: 1px solid red; padding: 20px 0; text-align: center;") Футер
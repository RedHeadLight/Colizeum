mixin instructionList(modificator, extraClasses, count)
	- classList = 'instructionList'

	if modificator
		each mod in modificator
			- classList = classList + ' instructionList--' + mod

	if extraClasses
		- classList = classList + ' ' + extraClasses

	div(class=classList) 
		.instructionList__list
			- var i = 0
			while i < count
				- i = i + 1
				.instructionList__item 
					a(href="#").instructionList__previewLink
						img(src="https://placehold.jp/437x207.png", alt="").instructionList__preview
					.instructionList__texts 
						a(href="#").instructionList__itemTitleLink

mixin pageNav(modificator, extraClasses, prev, next)
	- classList = 'pageNav'

	if modificator
		each mod in modificator
			- classList = classList + ' pageNav--' + mod

	if extraClasses
		- classList = classList + ' ' + extraClasses

	div(class=classList)
		if prev
			a.pageNav__link.pageNav__link--prev(href="#") 
				<svg width="37" height="37" viewBox="0 0 37 37" fill="none" xmlns="http://www.w3.org/2000/svg">
					<rect width="37" height="37" rx="18.5" transform="matrix(-1 0 0 1 37 0)" fill="currentColor"/>
					<path fill-rule="evenodd" clip-rule="evenodd" d="M25.4282 17.2624L16.3096 17.2624L20.2954 13.2766L16.795 13.2766L12.4468 17.6249L11.5717 18.4999L12.4468 19.375L16.795 23.7233L20.2954 23.7233L16.3096 19.7375L25.4282 19.7375L25.4282 17.2624Z" fill="black"/>
				</svg>
				span Предыдущая статья

		if next
			a.pageNav__link.pageNav__link--next(href="#") 
				span следующая статья
				<svg width="37" height="37" viewBox="0 0 37 37" fill="none" xmlns="http://www.w3.org/2000/svg">
					<rect width="37" height="37" rx="18.5" transform="matrix(-1 0 0 1 37 0)" fill="white"/>
					<path fill-rule="evenodd" clip-rule="evenodd" d="M11.5718 17.2624L20.6904 17.2624L16.7046 13.2766L20.205 13.2766L24.5532 17.6249L25.4283 18.4999L24.5532 19.375L20.205 23.7233L16.7046 23.7233L20.6904 19.7375L11.5718 19.7375L11.5718 17.2624Z" fill="black"/>
				</svg>
